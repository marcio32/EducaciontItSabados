@{
    Layout = null;
}

<!doctype html>
<html lang="en">
  <head>
  	<title>Curso Educacion It Sabados</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<link href="~/css/Login/login.css" rel="stylesheet" />

    </head>
	<body class="img js-fullheight" style="background-image: url(/images/bg.jpg);">
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Cambiar Contraseña</h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-4">
					<div class="login-wrap p-0">
		      	<form action="CambiarClave" class="signin-form" method="post">
					<div class="form-group">
						<input type="text" class="form-control" placeholder="Ingrese el codigo" name="Codigo" required>
					</div>
					<div class="form-group">
						<input type="text" class="form-control" placeholder="Ingrese la nueva clave" name="Clave" required>
					</div>
					<div class="form-group">
						<button type="submit" class="form-control btn btn-primary submit px-3">Cambiar Contraseña</button>
					</div>
	          </form>
		      </div>
				</div>
			</div>
		</div>
	</section>
		
    
<script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/popper/dist/popper.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
  <script src="~/js/login/login.js"></script>

	</body>
</html>

